<section id="stats" class="section-padding" style="background: #000; border-top: 1px solid var(--border-color); border-bottom: 1px solid var(--border-color);">
    <div class="container">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 3rem; text-align: center;">
            <div class="stat-item animate-on-scroll">
                <div style="font-size: 3.5rem; font-weight: 800; color: #fff; line-height: 1;">Ksh 1B+</div>
                <div style="color: #3b82f6; font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; margin-top: 0.5rem;">Target Recovery</div>
            </div>
            <div class="stat-item animate-on-scroll">
                <div style="font-size: 3.5rem; font-weight: 800; color: #fff; line-height: 1;">3-5X</div>
                <div style="color: #3b82f6; font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; margin-top: 0.5rem;">ROI Target</div>
            </div>
            <div class="stat-item animate-on-scroll">
                <div style="font-size: 3.5rem; font-weight: 800; color: #fff; line-height: 1;">24/7</div>
                <div style="color: #3b82f6; font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; margin-top: 0.5rem;">Active Support</div>
            </div>
            <div class="stat-item animate-on-scroll">
                <div style="font-size: 3.5rem; font-weight: 800; color: #fff; line-height: 1;">&lt; 1s</div>
                <div style="color: #3b82f6; font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; margin-top: 0.5rem;">Speed Standard</div>
            </div>
        </div>
    </div>
</section>

