<section id="pricing" class="section-padding"
    style="background: linear-gradient(to bottom, #0a0a0a, #050505); content-visibility: auto; contain-intrinsic-size: 100vh;">
    <div class="container">
        <h2 class="text-center animate-on-scroll" style="font-size: 3rem; margin-bottom: 0.5rem;">Investment Plans
        </h2>
        <div class="text-center animate-on-scroll"
            style="margin-bottom: var(--spacing-lg); color: var(--text-secondary); font-size: 0.9rem;">
            <span
                style="display: inline-block; border: 1px solid #3b82f6; padding: 0.2rem 0.8rem; border-radius: 20px; color: #3b82f6; margin-right: 0.5rem;">üõ°Ô∏è
                Satisfaction Guaranteed</span>
            30-Day Money-Back Guarantee on all audits.
        </div>

        <div class="pricing-grid"
            style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; align-items: start;">

            {% if section.settings.collection != blank %}
                {% for product in collections[section.settings.collection].products limit: 3 %}
                    <div class="pricing-card"
                        style="border: 1px solid #3b82f6; padding: 2rem; border-radius: var(--radius-md); background: rgba(59,130,246,0.05); position: relative;">
                        <h3 style="margin-bottom: 0.5rem;">{{ product.title }}</h3>
                        <div style="font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem;">
                            {{ product.price | money }}
                        </div>
                        <div style="color: var(--text-secondary); margin-bottom: 2rem;">
                            {{ product.description | strip_html | truncatewords: 20 }}
                        </div>
                        <a href="{{ product.url }}" class="btn btn-blue pricing-trigger" style="width: 100%;">View Details</a>
                    </div>
                {% endfor %}
            {% else %}
                <div class="pricing-card"
                    style="border: 1px solid #3b82f6; padding: 2rem; border-radius: var(--radius-md); background: rgba(59,130,246,0.05); position: relative;">
                    <div
                        style="position: absolute; top: -12px; left: 20px; background: #3b82f6; color: #fff; padding: 4px 12px; border-radius: 4px; font-size: 0.7rem; font-weight: 700;">
                        NEW YEAR OFFER</div>
                    <h3 style="margin-bottom: 0.5rem;">Deep Dive Audit</h3>
                    <div style="margin-bottom: 1rem;">
                        <span
                            style="text-decoration: line-through; color: var(--text-secondary); font-size: 1.2rem;">$1,500</span>
                        <div style="font-size: 2.5rem; font-weight: 700;">$997<span
                                style="font-size: 1rem; color: var(--text-secondary); font-weight: 400;">/one-time</span>
                        </div>
                    </div>
                    <p style="color: var(--text-secondary); margin-bottom: 2rem;">Deep dive analysis to uncover why you
                        are leaving money on the table.</p>
                    <ul style="list-style: none; color: var(--text-secondary); margin-bottom: 2rem; line-height: 2;">
                        <li>‚úì Comprehensive UX Audit</li>
                        <li>‚úì Competitor Benchmark</li>
                        <li>‚úì SEO Keyword Blueprint</li>
                        <li>‚úì <strong>Strategy Call (NEW)</strong></li>
                    </ul>
                    <a href="#contact" class="btn btn-gold pricing-trigger" data-service="audit"
                        style="width: 100%;">Book Now</a>
                </div>

                <!-- Plan 2: Subscription -->
                <div class="pricing-card"
                    style="border: 1px solid #3b82f6; padding: 2rem; border-radius: var(--radius-md); background: linear-gradient(145deg, rgba(59,130,246,0.1), transparent); position: relative; transform: scale(1.05);">
                    <div
                        style="position: absolute; top: -12px; left: 50%; transform: translateX(-50%); background: #3b82f6; color: #fff; padding: 4px 12px; border-radius: 20px; font-size: 0.8rem; font-weight: 600;">
                        MOST POPULAR</div>
                    <h3 style="margin-bottom: 0.5rem;">Growth Partner</h3>
                    <div style="font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem;">$4,500<span
                            style="font-size: 1rem; color: var(--text-secondary); font-weight: 400;">/month</span></div>
                    <p style="color: var(--text-secondary); margin-bottom: 2rem;">Continuous optimization and
                        development to scale your store.</p>
                    <ul style="list-style: none; color: #fff; margin-bottom: 2rem; line-height: 2;">
                        <li>‚úì <strong>Everything in Audit</strong></li>
                        <li>‚úì Weekly Heatmap Analysis</li>
                        <li>‚úì Unlimited A/B Testing</li>
                        <li>‚úì Dedicated Project Manager</li>
                    </ul>
                    <a href="#contact" class="btn btn-purple pricing-trigger" data-service="cro"
                        style="width: 100%;">Start Scaling</a>
                </div>

                <!-- Plan 3: Enterprise -->
                <div class="pricing-card"
                    style="border: 1px solid var(--border-color); padding: 2rem; border-radius: var(--radius-md); background: rgba(255,255,255,0.03);">
                    <h3 style="margin-bottom: 0.5rem;">Total Dominance</h3>
                    <div style="font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem;">Custom<span
                            style="font-size: 1rem; color: var(--text-secondary); font-weight: 400;">/project</span>
                    </div>
                    <p style="color: var(--text-secondary); margin-bottom: 2rem;">For brands doing $5M+ looking for a
                        dedicated technical team.</p>
                    <ul style="list-style: none; color: var(--text-secondary); margin-bottom: 2rem; line-height: 2;">
                        <li>‚úì Infrastructure Tuning</li>
                        <li>‚úì Unlimited UI/UX Requests</li>
                        <li>‚úì White-label Analytics</li>
                        <li>‚úì 24/7 Slack & Support</li>
                    </ul>
                    <a href="#contact" class="btn btn-blue pricing-trigger" data-service="apps"
                        style="width: 100%;">Contact Us</a>
                </div>
            {% endif %}

        </div>
    </div>
</section>

{% schema %}
{
  "name": "Pricing",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection",
      "info": "If selected, products from this collection will replace the hardcoded plans above."
    }
  ]
}
{% endschema %}

