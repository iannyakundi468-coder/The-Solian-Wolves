<header role="banner">
    <nav class="main-nav" role="navigation" aria-label="Main Navigation" style="position: fixed; top: 0; width: 100%; padding: 1.5rem 2rem; z-index: 100; mix-blend-mode: difference;">
        <div class="container" style="display: flex; justify-content: space-between; align-items: center;">
        {% if page.template_suffix == 'landing-kenya' %}
            <a href="{{ page.url }}" class="logo" style="text-decoration: none; color: inherit;" aria-label="The Solian Wolves Kenya">
                <div style="font-weight: 700; font-size: 1.2rem; letter-spacing: -0.02em;">THE SOLIAN WOLVES</div>
            </a>
            <div class="nav-links" style="display: flex; align-items: center;">
                <a href="#services"
                    style="margin-left: 2rem; font-size: 0.9rem; text-transform: uppercase; padding: 0.5rem;" aria-label="Our Services">Services</a>
                <a href="#pricing-kenya" style="margin-left: 2rem; font-size: 0.9rem; text-transform: uppercase; padding: 0.5rem;" aria-label="View Pricing">Pricing</a>
                <a href="#work" style="margin-left: 2rem; font-size: 0.9rem; text-transform: uppercase; padding: 0.5rem;" aria-label="Our Work">Work</a>
                <a href="#contact" class="btn btn-outline" style="padding: 0.6rem 1.8rem; margin-left: 2rem;" aria-label="Book a Free Mini Audit">MINI AUDIT</a>
            </div>
        {% else %}
            <a href="/" class="logo" style="text-decoration: none; color: inherit;" aria-label="{{ shop.name }} Home">
                <div style="font-weight: 700; font-size: 1.2rem; letter-spacing: -0.02em;">THE SOLIAN WOLVES</div>
            </a>
            <div class="nav-links" style="display: flex; align-items: center;">
                <a href="/#services"
                    style="margin-left: 2rem; font-size: 0.9rem; text-transform: uppercase; padding: 0.5rem;" aria-label="Our Services">Services</a>
                <a href="/pages/case-studies"
                    style="margin-left: 2rem; font-size: 0.9rem; text-transform: uppercase; color: #3b82f6; padding: 0.5rem;" aria-label="View Case Studies">Case Studies</a>
                <a href="/pages/for-agencies"
                    style="margin-left: 2rem; font-size: 0.9rem; text-transform: uppercase; padding: 0.5rem;" aria-label="For Agencies">Agencies</a>
                <a href="/#pricing" style="margin-left: 2rem; font-size: 0.9rem; text-transform: uppercase; padding: 0.5rem;" aria-label="View Pricing">Pricing</a>
                <a href="/#work" style="margin-left: 2rem; font-size: 0.9rem; text-transform: uppercase; padding: 0.5rem;" aria-label="Our Work">Work</a>
                <a href="/#contact" class="btn btn-outline" style="padding: 0.6rem 1.8rem; margin-left: 2rem;" aria-label="Book a Free Mini Audit">MINI AUDIT</a>
            </div>
        {% endif %}
        </div>
    </nav>
</header>

