<footer role="contentinfo" style="padding: 2rem 0; border-top: 1px solid var(--border-color); margin-top: 4rem;">
    <div class="container"
        style="display: flex; justify-content: space-between; color: var(--text-secondary); font-size: 0.9rem;">
        <div>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</div>
        <nav class="footer-links" aria-label="Footer Navigation" style="display: flex; gap: 2rem;">
            <a href="#" aria-label="Privacy Policy">Privacy Policy</a>
            <a href="#" aria-label="Terms of Service">Terms of Service</a>
            <a href="#" aria-label="Follow us on Twitter">Twitter</a>
            <a href="#" aria-label="Follow us on LinkedIn">LinkedIn</a>
        </nav>
        <div style="display: flex; gap: 1rem; align-items: center; margin-left: auto; padding-left: 2rem;">
            <span style="font-size: 0.8rem;">Secure Payments:</span>
            <svg aria-hidden="false" role="img" title="PayPal" width="20" height="20" viewBox="0 0 24 24" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <title>PayPal</title>
                <path
                    d="M20.05 6.35C19.7 5.05 18.5 4 16.5 4H7.5C6.9 4 6.5 4.4 6.4 5L4.1 19.6C4 20.2 4.5 20.6 5.1 20.6H9.4L10.3 15H13C17.5 15 21 11.5 20.05 6.35Z"
                    fill="#00457C" />
                <path
                    d="M17.15 6.35C16.8 5.05 15.6 4 13.6 4H7.5C6.9 4 6.5 4.4 6.4 5L5.7 9.4H13.6C16.6 9.4 18.2 7.7 17.15 6.35Z"
                    fill="#0079C1" />
                <path
                    d="M9.4 20.6H13.8L14.7 15H10.3L9.4 20.6ZM9.4 20.6H5.1C4.5 20.6 4 20.2 4.1 19.6L5.6 9.4H6.4L9.4 20.6Z"
                    fill="#0079C1" />
            </svg>
            <!-- Bank/Wire SVG -->
            <svg aria-hidden="false" role="img" title="Bank Transfer" width="20" height="20" viewBox="0 0 24 24" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <title>Bank Transfer</title>
                <path d="M2 10H22V13H2V10Z" fill="#555" />
                <path d="M4 14H8V20H4V14Z" fill="#555" />
                <path d="M10 14H14V20H10V14Z" fill="#555" />
                <path d="M16 14H20V20H16V14Z" fill="#555" />
                <path d="M12 2L2 7V9H22V7L12 2Z" fill="#555" />
                <path d="M2 21H22V23H2V21Z" fill="#555" />
            </svg>
        </div>
    </div>
</footer>

