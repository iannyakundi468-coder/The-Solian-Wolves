<header class="hero">
    <div class="hero-content">
        <div class="hero-logo">
            <img src="{{ 'logo.jpg' | asset_url }}" alt="The Solian Wolves Logo"
                style="width: 100%; height: 100%; object-fit: cover;" fetchpriority="high">
        </div>
        <h1>
            <span class="text-gradient">Optimize.</span> Fix.<br> Dominate.
        </h1>
        <p>We transform underperforming digital platforms into high-octane revenue engines.</p>
        <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="#contact" class="btn btn-gold pricing-trigger" data-service="free-audit">Get Your Free
                Audit</a>
            <a href="#services" class="btn btn-outline">Explore Services</a>
        </div>

        <!-- Trusted By Section -->
        <div style="margin-top: 3rem; border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1.5rem;">
            <p
                style="font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--text-secondary); margin-bottom: 1rem;">
                Trusted by high-growth brands</p>
            <div style="display: flex; gap: 2rem; justify-content: center; opacity: 0.5; filter: grayscale(100%);">
                <!-- Placeholders for logos (using text for now) -->
                <span style="font-weight: 700;">SHOPIFY</span>
                <span style="font-weight: 700;">NEXT.JS</span>
                <span style="font-weight: 700;">VERCEL</span>
                <span style="font-weight: 700;">STRIPE</span>
            </div>
        </div>
    </div>
</header>

{% schema %}
{
  "name": "Hero",
  "settings": []
}
{% endschema %}
